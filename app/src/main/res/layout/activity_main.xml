<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_260sdp"
            android:layout_above="@+id/rl_layout"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:src="@drawable/iv_poster" />

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottomlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_text"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Personalize your phone"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_start"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="rich choice or own content"
                android:textColor="#FBFF3F"
                android:textSize="@dimen/_15sdp" />


            <ImageView
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/iv_start_btn" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>